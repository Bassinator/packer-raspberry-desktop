{
  "variables": {
    "version": "2.3"
  },
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo  -H -E bash '{{.Path}}'",
      "script": "scripts/ansible.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/cleanup.sh"
    }
  ],
  "builders": [
    {
      "type": "hyperv-iso",
      "boot_command": [
        "<esc><wait>",
        "c  setparams 'Install' <enter>",
        "linux /install.$ARCH/vmlinuz preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/hyperv.seed locale=en_GB vga=788",
        " auto",
        " debian-installer=en_US",
        " locale=en_US",
        " keymap=us",
        " net.ifnames=0",
        " time/zone=US/Eastern",
        " netcfg/choose_interface=eth0",
        " netcfg/get_hostname=raspberry",
        " netcfg/get_domain=",
        " partman-auto/method=regular",
        " partman-auto/choose_recipe=atomic",
        " partman/choose_partition=finish",
        " partman/confirm=true",
        " partman/confirm_nooverwrite=true",
        " grub-installer/only_debian=true",
        " grub-installer/bootdev=/dev/sda",
        " pkgsel/upgrade=full-upgrade",
        " pkgsel/include=hyperv-daemons",
        " finish-install/reboot_in_progress=note",
        " --- quiet <enter>",
        "initrd /install.$ARCH/initrd.gz<enter>",
        "<enter>",
        "boot<enter>"
      ],
      "boot_wait": "2s",
      "disk_size": 81920,
      "headless": true,
      "http_directory": "http",
      "iso_urls": [
        "iso/rpd_x86-2019-04-12/2019-04-11-rpd-x86-stretch.iso",
        "https://downloads.raspberrypi.org/rpd_x86/images/rpd_x86-2019-04-12/2019-04-11-rpd-x86-stretch.iso"
      ],
      "iso_checksum": "dccee2371937349704a647d4a64d2552f6737e1d4185a0b308c9a0ad8c231cc0",
      "iso_checksum_type": "sha256",
      "ssh_username": "pi",
      "ssh_password": "raspberry",
      "ssh_port": 22,
      "ssh_timeout" : "1h",
      "generation" : 2,
      "shutdown_command": "sudo -S shutdown -P now",
      "vm_name": "raspberryDesktop-stretch-64bit",
      "skip_export": false
    }
  ],
  "post-processors": [
    [
      {
        "output": "builds/2019-04-11-rpd-x86-stretch-64.box",
        "type": "vagrant",
        "only": ["hyperv-iso"]
      },
      {
        "type": "vagrant-cloud",
        "box_tag": "Bassualdo/raspberryDesktop-stretch-64bit",
        "version": "{{user `version`}}"
      }
    ]
  ]
}
