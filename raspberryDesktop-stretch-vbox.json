{
  "variables": {
    "version": " ",
    "arch": "amd",
    "guest_os_type": "Debian_64"
    "box_name": "rpd64"
  },
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo  -H -E bash '{{.Path}}'",
      "script": "scripts/upgrade.sh"
    },
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo  -H -E bash '{{.Path}}'",
      "script": "scripts/ansible.sh"
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/main.yml",
      "extra_arguments": [ "--extra-vars \"ansible_python_interpreter=/usr/bin/python3\"" ],
      "galaxy_file": "ansible/requirements.yml"
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<esc><wait>",
        "/install.{{user `arch`}}/vmlinuz",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/virtualbox.seed",
        " vga=788 <wait>",
        "--- quiet initrd=/install.{{user `arch`}}/initrd.gz <wait>",
        " auto",
        " debian-installer=en_US",
        " locale=en_US",
        " keymap=us",
        " net.ifnames=0",
        " time/zone=US/Eastern",
        " netcfg/choose_interface=eth0",
        " netcfg/get_hostname=raspberry",
        " netcfg/get_domain=",
        " partman-auto/disk=/dev/sda",
        " partman-auto/method=regular",
        " partman-auto/choose_recipe=atomic",
        " partman/choose_partition=finish",
        " partman/confirm=true",
        " partman/confirm_nooverwrite=true",
        " grub-installer/only_debian=true",
        " grub-installer/bootdev=/dev/sda",
        " finish-install/reboot_in_progress=note",
        "<enter>"
      ],
      "boot_wait": "10s",
      "disk_size": 81920,
      "guest_os_type": "{{user `guest_os_type`}}",
      "headless": true,
      "keep_registered": false,
      "http_directory": "http",
      "iso_urls": [
        "iso/rpd_x86-2019-04-12/2019-04-11-rpd-x86-stretch.iso",
        "https://downloads.raspberrypi.org/rpd_x86/images/rpd_x86-2019-04-12/2019-04-11-rpd-x86-stretch.iso"
      ],
      "iso_checksum": "dccee2371937349704a647d4a64d2552f6737e1d4185a0b308c9a0ad8c231cc0",
      "iso_checksum_type": "sha256",
      "ssh_username": "pi",
      "ssh_password": "raspberry",
      "ssh_port": 22,
      "ssh_wait_timeout": "1h",
      "shutdown_command": "sudo -S shutdown -P now",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "rpd-2018-11-26-stretch{{user `arch`}}",
      "post_shutdown_delay": "10s",
      "skip_export": false,
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "2048"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--vram",
          "64"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--nic1",
          "nat"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cableconnected1",
          "on"
        ]
      ]
    }
  ],
  "post-processors": [
    [
      {
        "keep_input_artifact": true,
        "output": "builds/2019-04-11-rpd-x86-stretch-{{user `arch`}}.box",
        "type": "vagrant",
        "only": ["virtualbox-iso"]
      },
      {
        "type": "vagrant-cloud",
        "box_tag": "Bassualdo/{{user `box_name`}}",
        "version": "{{user `version`}}"
      }
    ]
  ]
p
